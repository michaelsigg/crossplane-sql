{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "crossplane-cli@1.20.0",
    "go-task@3.43.3",
    "cilium-cli@0.18.3",
    "hubble@1.17.2",
    "jq@latest",
    "argocd@2.14.11",
    "yq-go@latest",
    "openssl@latest",
    "postgresql_17@latest",
    "curl@latest",
    "gron@latest",
    "kind@0.29.0",
    "kubectl@1.33.1",
    "kubernetes-helm@3.18.2"
